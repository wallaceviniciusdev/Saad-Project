<div class="panel panel-default">

<div class="panel-heading">
   <h4><%= action %></h4>
</div>
  <div class="panel-body">

   <%= form_for(@principal) do |f| %>
      <div class="row">
            <div class="col-lg-6">
                  <div class="form-group">
                    <%= f.label :nome %><br>
                    <%= f.text_field :nome, :class => "form-control" %>
                  </div>
            </div>

            <div class="col-lg-4">
                  <div class="form-group">
                    <%= f.label :cpf %><br>
                    <%= f.text_field :cpf, :class => "form-control" %>
                  </div>
            </div>

            <div class="col-lg-3">
                  <div class="form-group">
                    <%= f.label :telefone %><br>
                    <%= f.text_field :telefone, :class => "form-control" %>
                  </div>
            </div>
            <div class="col-lg-6">
                  <div class="form-group">
                    <%= f.label :endereco %><br>
                    <%= f.text_field :endereco, :class => "form-control" %>
                  </div>
            </div>
            <div class="col-lg-4">
                  <div class="form-group">
                    <%= f.label :lattes %><br>
                    <%= f.text_field :lattes, :class => "form-control" %>
                  </div>
            </div>

      </div>
      <div class="row ">
            <div class="col-lg-6">
                  <div class="form-group">
                    <%= f.label :biografia %><br>
                    <%= f.text_area :biografia, :class => "form-control", rows:3%>
                  </div>
                  
                  <div class="field" style="display:none;">
                    <%= f.text_field :institution_id, :value => @institution_id%>
                  </div>
                  <div class="field" style="display:none;">
                    <%= f.text_field :course_id, :value => @course_id%>
                  </div>
            </div>
            <div class="col-lg-4">
                  <div class="form-group">
                    <%= f.label :matricula %><br>
                    <%= f.text_field :matricula, :class => "form-control" %>
                  </div>
            </div>
      </div>
      <div class="row">
            <div class="col-lg-6">
                  <div class="form-group">
                    <%= f.label :foto %><br>
                    <%= f.file_field :avatar, :class => "form-control" %>
                  </div>
            </div>
      </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, :class => "form-control" %>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3">
                <div class="form-group">
                  <%= f.label :senha %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
                </div>
            </div>
            <div class="col-lg-3">
                  <div class="form-group">
                    <%= f.label :confirmaÃ§Ã£o_senha %>
                    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
                  </div>
            </div>
        </div>

                      <center>  <%= submit_tag  fucao,class: "btn btn-default"  %>
                  </center>
          <% end %>

      </div>
    </div>


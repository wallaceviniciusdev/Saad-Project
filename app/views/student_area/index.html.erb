<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
<script>
    $(".card-columns").addClass("animated bounceInUp")
    $(".pull-right").addClass("animated bounceInDown")
    $(".logo").addClass("animated bounceInDown")
    $(".user-slide").addClass("animated bounceInLeft")
    var nome_usuario = "<%= current_user.nome.downcase.titleize %>";
    var novo_nome = nome_usuario.split(" ");
    $(".nome-user").html("<span style='font-weight:bold;'>" + novo_nome[0] + " " + novo_nome[novo_nome.length-1] + '</span>');


    $(document).ready(function() {
        document.title = 'SAAD - ' + novo_nome[0] + " " + novo_nome[novo_nome.length-1];
    });

    $(".atividades").hide();
    $(".alerta").hide();
    $(".ativ-notification").click(function(){
      $(this).find(".atividades").toggle(100);
    })

    var cont1 = 0, cont2 = 0, cont3 = 0;
    <% @atividades.each do |atividade| %>
      <% if atividade.status != "finalizado"%>
        cont1++;
      <% end %>
    <% end %>
    $(".ativ").text(cont1);
    if(cont1 == 0){
      $(".content-atividade").css("margin", "0!important")
      $(".content-atividade").html("<div class='alert alert-primary' role='alert'>Nenhum questionário para ser respondido</div>")
    }

    <% @my_quizzes.each do |quiz| %>
      <% if quiz != nil%>
        cont2++;
      <% end %>
    <% end %>
    $(".quest").text(cont2);
    if(cont2 == 0){
      $(".content-questionario").html("<div class='alert alert-primary' role='alert'>Nenhum questionário para ser respondido</div>")
    }

    <% @my_question_socio_emotionals.each do |question_socio_emotional| %>
      <% if @my_question_socio_emotionals != nil && @my_question_socio_emotionals.size > 0%>
        cont3++;
      <% end %>
    <% end %>
    if(cont3 == 0){
      $(".content-emocional").html("<div class='alert alert-primary' role='alert'>Nenhum questionarios de competências socioemocionais para ser respondido</div>")
    }

    if(cont1 == 0 || cont2 == 0){
      $(".alerta").show();
      $(".alerta").html("Você tem questionários ou atividades para resolver");
    }
</script>
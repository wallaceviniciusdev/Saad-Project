                      <%= f.label :titulo %><br>
                      <%= f.text_field :titulo ,class: "form-control"%>
                    </div>
                    <div class="col-lg-12">
                          <%= f.label :descricao %><br>
                          <%= f.text_area :descricao ,class: "form-control", rows:7%>
                    </div>
                  </div>
                </div>
              <div class="row mt">
                  <div class = "form-group">
                    <div class="col-lg-3">
                      <div class="field">
                          <%= f.label :data_final %><br>
                          <%= f.date_select :data_final %>

                      </div>
                    </div>
                    <div class="col-lg-3">
                      <div class="field">
                            <%= f.label :arquivo %><br>
                            <%= f.file_field :arquivo,class: 'btn btn-large btn-default' %>
                      </div>
                    </div>
                  </div>
              </div>
              <%= f.hidden_field :user_id, :value => @atividade_extra.user_id %>

          <div class="actions">
            <center><br><%= f.submit fucao, class: "btn btn-default" %></center>

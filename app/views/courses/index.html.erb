  <div class="panel panel-default">
    <div class="panel-heading">
        <center><h4>Cursos</h4></center>
<!--         <center><%= link_to 'Novo curso', new_course_path, :class => "btn btn-success btn-lg", data: { no_turbolink: true } %></center>
         -->        <%= link_to new_course_path, class: "btn btn-primary btn-login  btn-sm pull-right", style:  "margin-top : -35px" do  %> 
            <i class="fa fa-plus"></i>
        <% end %>

    </div>
    <div class="panel-body">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Data abertura</th>
              <th>Turno</th>
              <th>Centro</th>
              <th colspan="3"><center>Ações</center></th>
            </tr>
          </thead>
          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= course.nome %></td>
                <td><%= course.data_abertura.strftime("%d/%m/%Y") %></td>
                <td><%= course.turno %></td>
                <td><%= course.center.name %></td>
                <td><%= link_to 'Detalhes', course, class: "btn btn-success btn-login btn-sm" %></td>
                <td><%= link_to 'Editar', edit_course_path(course), class: "btn btn-success btn-login btn-sm" %></td>
                <td><%= link_to 'Excluir', course, method: :delete, data: { confirm: 'Deseja realmente excluir?' }, class: "btn btn-success btn-login btn-sm" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
            </div>
      </div>
</div>

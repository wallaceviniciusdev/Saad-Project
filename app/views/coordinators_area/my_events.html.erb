<link href="http://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href=https://daneden.github.io/animate.css/animate.min.css">

<div class="background"></div>
<div class="navegacao">
  <div class="container">
    <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Início</a></li>
    <li class="breadcrumb-item">Eventos</li>
    <li class="breadcrumb-item"><a href="javascript:;"><b>Meus Eventos</b></a></li>
  </ol>
</nav>
  </div>
</div>

<div class="container">
<div class="panel panel-default">

    <div class="panel-heading">
       <h4>Meus Eventos<a href="javascript:history.back()"><h4><span class="badge badge-warning"><i class="fas fa-arrow-left"></i> Voltar</span></h4></a></h4>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-lg-12">

        <table class="table table-bordered table-striped table-condensed">
          <thead>
            <tr>
              <th>Titulo</th>
              <th>Apresentacao</th>
              <th>Inicio</th>
              <th>Fim</th>
              <th>Criado por</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td><%= event.nome %></td>
                <td><%= event.apresentacao %></td>
                <td><%= event.inicio.strftime("%d/%m/%y às %H:%M") %></td>
                <td><%= event.fim.strftime("%d/%m/%y às %H:%M") %></td>
                <%# if event.submissao %>
<!--                     <td>Sim</td>
                <%# else %>
<td>Não</td>
                <%# end %> -->
<!--                 <td><%= event.deadline.strftime("%d/%m/%y: %H:%M") %></td>
                <td><%= event.trabalhos %></td>
                 -->                <td><%= event.user.nome %></td>
                <td><%= link_to 'Ver', event , class: "btn btn-success btn-login btn-sm" %></td>
                <td><%= link_to 'Editar', edit_event_path(event) , class: "btn btn-success btn-login btn-sm" %></td>
                <td><%= link_to 'Deletar', event, method: :delete, data: { confirm: 'Deseja realmente excluir?' }, class: "btn btn-success btn-login btn-sm" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Apresentacao</th>
      <th>Objetivos</th>
      <th>Inicio</th>
      <th>Fim</th>
      <th>Submissao</th>
      <th>Normas de submiss√£o</th>
      <th>Tempo limite</th>
      <th>tipo de trabalho</th>
      <th>Criado por</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.nome %></td>
        <td><%= event.apresentacao %></td>
        <td><%= event.objetivos %></td>
        <td><%= event.inicio.strftime("%-d/%-m/%y: %H:%M") %></td>
        <td><%= event.fim.strftime("%-d/%-m/%y: %H:%M") %></td>
        <td><%= event.submissao %></td>
        <td><%= event.normas %></td>
        <td><%= event.deadline.strftime("%-d/%-m/%y: %H:%M") %></td>
        <td><%= event.trabalhos %></td>
        <td><%= event.user.nome %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


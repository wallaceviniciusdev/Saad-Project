<h1>Meus Eventos</h1>

<div class="row mt">
<div class="col-lg-12">
<div class="content-panel">
<h4><i class="fa fa-angle-right"></i> Meus Eventos</h4>
<section id="unseen">
<table class="table table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Apresentacao</th>
      <th>Objetivos</th>
      <th>Inicio</th>
      <th>Fim</th>
      <th>Submissao</th>
      <th>Normas de submissão</th>
      <th>deadline</th>
      <th>tipo de trabalho</th>
      <th>Criado por</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.nome %></td>
        <td><%= event.apresentacao %></td>
        <td><%= event.objetivos %></td>
        <td><%= event.inicio.strftime("%d/%m/%y: %H:%M") %></td>
        <td><%= event.fim.strftime("%d/%m/%y: %H:%M") %></td>
        <% if event.submissao %>
            <td>Sim</td>
        <% else %>
            <td>Não</td>
        <% end %>
        <td><%= event.normas %></td>
        <td><%= event.deadline.strftime("%d/%m/%y: %H:%M") %></td>
        <td><%= event.trabalhos %></td>
        <td><%= event.user.nome %></td>
        <td><%= link_to 'Ver', event %></td>
        <td><%= link_to 'Editar', edit_event_path(event) %></td>
        <td><%= link_to 'Deletar', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>
        </section>
      </div>
    </div>
  </div>

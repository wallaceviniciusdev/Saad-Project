 <% @formations.each do |formation| %>
  <div class="resume-item d-flex flex-column flex-md-row mb-5">
    <div class="resume-content mr-auto" >
      <p><b>•</b> <%= formation.nivel %> - <%= formation.institution %> 
- <%= formation.course %> - Período: <%= formation.date_start.strftime("%d/%m/%Y") %> 
	<% if formation.date_end.nil? %>
		- Em andamento
		
	<% else %>
		à  <%= formation.date_end.strftime("%d/%m/%Y") %> 
	<% end %>
</p>
    </div>
  <div class="resume-content">
	<%= link_to 'Deletar', formation, method: :delete,class: "btn btn-default btn-sm btn-login", style: "float: right;", remote: true, data: { confirm: 'Você tem certeza?' }%>
  <div style="float: right;">
  	&nbsp;
  </div>
	<%= link_to 'Editar', edit_formation_path(formation.id), class: "btn btn-default btn-sm btn-login", style: "float:right;",remote:true   %> 
  </div>
  </div>
 <% end %>


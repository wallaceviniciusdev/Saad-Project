<p id="notice"><%= notice %></p>

<h1>Listing Threats Answers</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Threat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @threats_answers.each do |threats_answer| %>
      <tr>
        <td><%= threats_answer.text %></td>
        <td><%= threats_answer.threat %></td>
        <td><%= link_to 'Show', threats_answer %></td>
        <td><%= link_to 'Edit', edit_threats_answer_path(threats_answer) %></td>
        <td><%= link_to 'Destroy', threats_answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


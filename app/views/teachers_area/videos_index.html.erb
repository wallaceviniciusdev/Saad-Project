<link href="http://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href=https://daneden.github.io/animate.css/animate.min.css">

<div class="background"></div>

<div class="navegacao">
  <div class="container">
    <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Início</a></li>
    <li class="breadcrumb-item">Vídeos</li>
    <li class="breadcrumb-item"><a href="javascript:;"><b>SAAD TV</b></a></li>
  </ol>
</nav>
  </div>
</div>

<div class="container">
    <div class="panel panel-default">
  <div class="panel-heading">
<h4>SAAD TV
     <a href="javascript:history.back()"><h4><span class="badge badge-warning"><i class="fas fa-arrow-left"></i> Voltar</span></h4></a>
</h4>
</div>

<div class="row mt">
  <div class="col-lg-12">
      <div class="panel-body">
        <div class="row mt">
        <% if @videos != nil %>
            <% @videos.each do |video| %>
            <div class="col-lg-6">
                <div class="row mt">
                    <div class="col-lg-8">
                        <iframe width="540" height="340" src="<%= "http://www.youtube.com/embed/"+ video.url %>"></iframe>
                    </div>
                    <div class="col-lg-4">
                        <p>
                            <strong>Título:</strong> Título do vídeo<br>
                            <strong>Enviado por:</strong> <%= video.sender.nome%><br>
                            <strong>Descrição:</strong> <%= video.description %><br>
                            <%= link_to 'Deletar', video, method: :delete, data: { confirm: 'Deseja realmente excluir?', :class => "btn btn-danger btn-sm" } %>
                        </p>
                    </div>
                </div>
            </div>
            <% end %>
        <% end %>
        </div>
      </div>
  </div>
</div>
                        <br>
                        <%= f.label :Submissões_de_trabalhos %>
                        <%= f.check_box :submissao %>

                </div>

                <div class="col-lg-4">
                    <br>
                    <%= f.label :Datas_e_horários_de_realização %>
                    <%= f.text_field :date_achievement, class: "form-control" %>

                </div>

                </div>
            </div>
          </div>
            <div class="row mt">
                  <div class="col-lg-12">

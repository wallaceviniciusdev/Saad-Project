<%= form_for(Matriculation.new) do |f| %>

  <div class="form-group">
  <div class="col-lg-8">
  <label >Nome Completo</label> <br>
    <%= f.text_field :nome, class:"form-control" %> <br>
  </div>
  </div> 
      <div class="col-lg-2">
    <%= f.label :telefone %><br>
    <%= f.text_field :telefone,class:"form-control" %> <br>
  </div> 
  
  <div class="field">
    <div class="col-lg-6">

    <%= f.label :email %><br>
    <%= f.text_field :email ,class:"form-control"%>
  </div>
  </div>

    <div class="col-lg-3">
    <%= f.label :tipo %><br>
    <%= f.select :tipo, ['Estudante', 'Professor', 'Profissional'],{},class:"form-control"%> <br>
  </div>
  <div class="field">
    <%= f.hidden_field :event_id, :value => @event.id %>
  </div>
    <div class="col-lg-12">
    <center><%= f.submit 'Inscrever', class:"btn btn-login"%></center>
  </div>
<% end %>

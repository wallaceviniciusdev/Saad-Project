<%= form_for(@student, html: { multipart: true }) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>
              <div class="col-lg-4">
                  <div class="form-group">
                    <%= f.label :cpf %><br>
                    <%= f.text_field :cpf, :class => "form-control" %>
                  </div>
            </div>

  <div class="field">
    <%= f.label :telefone %><br>
    <%= f.text_field :telefone %>
  </div>
  <div class="field">
    <%= f.label :endereco %><br>
    <%= f.text_field :endereco %>
  </div>
  <div class="field">
    <%= f.label :lattes %><br>
    <%= f.text_field :lattes %>
  </div>
   <div class="field">
    <%= f.label :biografia %><br>
    <%= f.text_area :biografia %>
  </div>
  <div class="field">
    <%= f.label :matricula %><br>
    <%= f.text_field :matricula %>
  </div>
   <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= label_tag :institution %><br>
    <%= autocomplete_field_tag :institution, params[:institution], autocomplete_institution_nome_institutions_path, :id_element => '#user_institution_id'%>
  </div>

  <div class="field">
    <%= f.hidden_field :institution_id %>
  </div>

  <div class="field">
    <%= label_tag :curso %><br>
    <%= autocomplete_field_tag :course, params[:course], autocomplete_course_nome_students_path%>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%# Conditionally set remote: true. Also, passing model name as data attribute %>
<% modal ||= false %>
<% remote = modal ? true : false %>
<%= form_for(Strength.new, remote: remote, html: {role: :form, 'data-model' => 'strength'}) do |f| %>



  <div class="field">
    <%= f.label :força, class: 'control-label' %><br>
    <%= f.text_area :text %>
    <span class="help-block"></span>
  </div>
  <div class="field">
  <%= f.hidden_field :plano_id, :value => @plano.id %>
  </div>
  <div class="actions">
    <center><%= f.submit 'Criar Força' %></center>
  </div>
<% end %>

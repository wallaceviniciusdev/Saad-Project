 <div class="panel panel-default">
  <div class="panel-heading">
    <h4><i class="fa fa-file-o"></i>Atividade: <strong><%= @atividade_extra.titulo %></strong></h4>
  </div>

    <div class="row mt">
      <div class="col-lg-12">
            <div class="panel-body">

        <p>
          <strong>Descricao:</strong>
          <%= @atividade_extra.descricao %>
        </p>

          <p>
            <strong>Data final:</strong>
            <%= @atividade_extra.data_final.strftime("%d/%m/%Y") %>
          </p>
          <p>
          <strong>Anexo da Atividade:</strong>
            <%= link_to  @atividade_extra.arquivo.url(:original, false)  do %>
                  <% if @atividade_extra.arquivo_content_type == "application/pdf" %>
                    <i class="fa fa-file-pdf-o" style="color:#BD1E0F;"></i>
                  <% else %>
                    <i class="fa fa-file-word-o" style="color:#08336E;"></i>

                  <% end %>
              <% end %>
          </p>

      <h4><i class="fa fa-th-list"></i> Minhas Respostas</h4>
      <section id="unseen">
        <table class="table table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>Aluno</th>
      <th>Observacões do Aluno</th>
      <th>Anexo do Aluno</th>
      <th>Correções do Professor</th>
    </tr>
  </thead>

  <tbody>
    <% @atividade_extra.answers.each do |answer| %>
      <tr>
        <td><%= answer.user.nome %></td>
        <td><%= answer.observacao %></td>
        <td><%= link_to answer.arquivo_resposta.url(:original, false) ,class:"btn btn-default btn-sm" do %>
                  <% if answer.arquivo_resposta_content_type == "application/pdf" %>
                    <i class="fa fa-file-pdf-o" style="color:#BD1E0F;"></i>
                  <% else %>
                    <i class="fa fa-file-word-o" style="color:#08336E;"></i>

                  <% end %>
              <% end %>
        </td>
        <td><%= link_to "Ver correções", answer, class:"btn btn-default btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>
</div>
</div>
</div>
</div>

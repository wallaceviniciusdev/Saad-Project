                            <%= f.text_field :trabalhos, class: "form-control" %>
                          </div>
                          <div class="col-lg-4">
                            <%= f.label :deadline %><br>
                            <%= f.date_select :deadline %>
                          </div>
                        </div>
                        <div class="form-group">
                          <div class="col-lg-8">
                            <%= f.label :normas %><br>
                            <%= f.text_area :normas, class: "form-control", rows:3  %> <br>
                        </div>
                      </div>
                </div>
            </div>
                  <div class="col-lg-12">
                        <div class="actions">
                            <center><%= f.submit funcao, :class => "btn btn-primary btn-login btn-lg"  %></center>
                          </div>
                  </div>
        </div>
  </div>
  <% end %>                       
<link href="http://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href=https://daneden.github.io/animate.css/animate.min.css">

<div class="background"></div>

<style>
  .field select {
    width: 32.9%!important;
  }
  .form-control, select {
      background: white!important;
      width: 100%;
      border: 2px solid #AAA;
      border-radius: 40px;
      padding: 10px 20px!important;
      height: 40px!important;
      margin-bottom: 15px;
      font-size: 12px;
      outline: none;
      transition: all 0.2s;
  }
  .form-control:focus, select:focus {
      border-color: #294fa5!important;
      color: #294fa5!important;
      box-shadow: none!important;
  }
</style>

<div class="navegacao">
  <div class="container">
    <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">In√≠cio</a></li>
    <li class="breadcrumb-item">Atividades</li>
    <li class="breadcrumb-item"><a href="javascript:;"><b>Criar Nova Atividade</b></a></li>
  </ol>
</nav>
  </div>
</div>

<%= javascript_include_tag "application", params[:controller] %>
<%= javascript_include_tag 'testando' %>
<div class="container">

 <div class="panel panel-default">
  <div class="panel-heading">
    <h4>Criar Nova Atividade
        <a href="javascript:history.back()"><h4><span class="badge badge-warning"><i class="fas fa-arrow-left"></i> Voltar</span></h4></a>
    </h4>
  </div>
      <div class="row">
          <div class="col-lg-12">
            <div class="panel-body">
                  <%= form_tag({ :controller => "teachers_area", :action => "create_atividade_extra"}, :multipart => true) do %>
                <div class="row">
                    <div class="col-lg-6">
                      <%= label_tag :titulo %><br>
                      <%= text_field_tag(:titulo, nil,class: "form-control") %>
                    </div> 
                    <div class="col-lg-6">
                          <%= label_tag :descricao %><br>
                          <%= text_area_tag(:descricao,nil, class:"form-control", rows:7) %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                      <div class="field">
                        <%= label_tag :data_final %><br>
                        <%= date_select(:data_final, :data_final, order: [:day, :month, :year]) %>
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="field">
                        <%= label_tag :arquivo %><br>
                        <%= file_field_tag :arquivo, {class: "form-control"} %>
                      </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                        <%= label_tag :Turma %>
                        <%= grouped_collection_select(nil, :classroom_id, @subjects, :classrooms, :nome, :id, :codigo,{}, {class: "form-control"})%>
                    </div>
                    <div class="col-lg-6">
                        <%= label_tag :Usuarios %>
  <!--                       <%= grouped_collection_select(nil, :users_id, @classrooms, :students, :codigo, :id, :nome)%> 
   -->                 <%= collection_select(nil, :users_id, @students, :id, :nome ,{}, {class: "form-control"})%>
                    </div>
            </div>
          <div class="actions">
            <center><br><%= submit_tag "Enviar" %></center>
          </div>
              </div>
              
        <% end %>
    </div>
   </div>
</div>
</div>

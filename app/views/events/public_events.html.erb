<%# link_to 'Voltar', root_path %>

<br>
<div class="container">
<div class="col-lg-12">
  <div class="panel panel-default">

      <div class="panel-heading">
         <center><h2>Eventos</h2></center>
      </div>
      <div class="panel-body">
        <div class="row mt">
          <div class="col-lg-12">      
           <center><h3>Eventos em Andamento</h3></center>
              <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                  <thead>
                    <tr>
                      <th>Nome</th>
                      <th colspan="1"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @events.each do |event| %>
                    <% if event.fim.past? == false %>
                      <tr>
                        <td><%= event.nome %></td>
                        <td><center><%= link_to 'Ver', public_show_events_path(:event => event ), class: "btn btn-login" %></center></td>
                      </tr>
                      <% end  %>
                    <% end %>
                  </tbody>
                </table>

                <br>
                </section>
                   <center><h3>Eventos Finalizados</h3></center>
              <section id="unseen">
                <table class="table table-bordered table-striped table-condensed">
                  <thead>
                    <tr>
                      <th>Nome</th>
                      <th colspan="1"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @events.each do |event| %>
                    <% if event.fim.past? == true %>
                      <tr>
                        <td><%= event.nome %></td>
                        <td><center><%= link_to 'Ver', public_show_events_path(:event => event ), class: "btn btn-login" %></center></td>
                      </tr>
                      <% end  %>
                    <% end %>
                  </tbody>
                </table>

                <br>
                </section>
        </div>
      </div>
    </div>
  </div>
</div>



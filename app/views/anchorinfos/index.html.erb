<p id="notice"><%= notice %></p>

<h1>Listing Anchorinfos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Perfil</th>
      <th>Perspectiva</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @anchorinfos.each do |anchorinfo| %>
      <tr>
        <td><%= anchorinfo.nome %></td>
        <td><%= anchorinfo.descricao %></td>
        <td><%= anchorinfo.perfil %></td>
        <td><%= anchorinfo.perspectiva %></td>
        <td><%= anchorinfo.tipo %></td>
        <td><%= link_to 'Show', anchorinfo %></td>
        <td><%= link_to 'Edit', edit_anchorinfo_path(anchorinfo) %></td>
        <td><%= link_to 'Destroy', anchorinfo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Anchorinfo', new_anchorinfo_path %>

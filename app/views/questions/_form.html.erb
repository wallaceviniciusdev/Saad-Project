  <div class="field">
    <%= f.label :enunciado, class: 'control-label' %><br>
    <%= f.text_area :statement, class: 'form-control',rows:4  %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>
  <div class="field">
    <%= f.hidden_field :study_case_id, :value => @study_case.id %>
  </div>

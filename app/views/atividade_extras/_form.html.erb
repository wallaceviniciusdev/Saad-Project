 <div class="panel panel-default">
  <div class="panel-heading">
    <center><h4><i class="fa fa-pencil-square-o"></i><%= action %></h4></center>
  </div>
      <div class="row mt">
            <%= form_for(@atividade_extra) do |f| %>
                <% if @atividade_extra.errors.any? %>

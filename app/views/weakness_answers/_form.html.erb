<% modal ||= false %>
<% remote = modal ? true : false %>
<%= form_for(WeaknessAnswer.new, remote: remote, html: {role: :form, 'data-model' => 'weakness_answer'}) do |f| %>


  <div class="field">
    <%= f.label :resposta, class: 'control-label' %><br>
    <%= f.text_area :text, class: 'form-control',rows:4  %>
    <span class="help-block"></span>
  </div>
  <div class="field">
    <%= f.hidden_field :weakness_id, :value => locals[:teste] %>
  </div>
  <div class="actions">
    <center><%= f.submit "Responder fraqueza", class: "btn btn-default" %></center>
  </div>
<% end %>

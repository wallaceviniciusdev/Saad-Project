<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.1.135/jspdf.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/2.0.16/jspdf.plugin.autotable.js"></script>
<link href="http://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href=https://daneden.github.io/animate.css/animate.min.css">

<div class="background"></div>

<div class="navegacao">
  <div class="container">
    <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Início</a></li>
    <li class="breadcrumb-item">Competências Socioemocionais</li>
    <li class="breadcrumb-item"><a href="javascript:;"><b>Analisar Competências Socioemocionais</b></a></li>
  </ol>
</nav>
  </div>
</div>

<%= javascript_include_tag "SocioEmotionalcreatePdf"%>
<%= javascript_include_tag "createCsv"%>

<div class="container">
<div class="panel panel-default">
      <div class="panel-heading">
        <h4>Analisar Competências Socioemocionais
        <a href="javascript:history.back()"><h4><span class="badge badge-warning"><i class="fas fa-arrow-left"></i> Voltar</span></h4></a></h4>
        <%= link_to '#', id: "export", class: "btn btn-success btn-circle pull-right", style:  "margin-top : -35px" do  %> 
            <i class="fa  fa-file-excel-o "></i>
        <% end %>
      <div id='exports'>
      </div>
      </div> 
      <div class="row">
        
  <div class="col-lg-12">
     <div class="panel-body">
      <div class="alert alert-primary" role="alert">
          Selecione uma das datas abaixo para visualizar o resultado:
        </div>
          <%= form_tag(show_by_date_result_socio_emotionals_path, method: 'post', :remote => true) do %>
            <%= hidden_field_tag "selecao", @selecao %>
          <div class="row">
           <div class="col-lg-12">
            
          <div class="form-group">

        <center><%= select_tag(:data_final, options_for_select(@datas),:class => "form-control") %></center>
       </div>
     </div>
    </div>        
          <% @result_socio_emotionals.map(&:id).each do |id| %>
            <%= hidden_field_tag "result_socio_emotionals[]", id %>
          <% end %>
            <%= hidden_field_tag "allUsers", @allUsers %>

          <div class="row">
              <div class="col-lg-7">
                  <div class="tab-pane hidden" id="chartjs" margin-right: auto;">
                    <div id="graphic"></div>
                  </div>
              </div>
              <div class="col-lg-5">
                  <table id="tabela_resultados" class="table table-bordered table-striped table-condensed">
                      <thead>
                        <tr>
                      <th>Competência</th>
                      <th>Pontuação</th>
                      <th>Nivel</th>
                        </tr>
                      </thead>
                      <tbody  id="media">
                      </tbody>
                  </table>
              </div>
      </div>
 <center><%= submit_tag "Visualizar resultados" %>

 </center>
<br/>
  </div>
</div>
</div>
</div>
<% end %>

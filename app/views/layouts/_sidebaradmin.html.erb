<link href="http://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href=https://daneden.github.io/animate.css/animate.min.css">

<!--sidebar start-->
            
<style>
  label {
    font-size: 12px;
  }
  .background {
    display: none;
  }

  .menu-button {
    display: none;
    float: right;
    margin-top: 30px;
    margin-right: 30px;
    color: white;
    font-size: 20px;
    z-index: 99999;
    position: relative;
  }

  .close-button {
    display: none!important;
  }
  @media only screen and (max-width: 600px) {
    aside {
      margin-left: -600px;
    }

    .background {
      display: block;
      height: 150px;
    }

    .wrapper {
      margin-top: 25px;
    }

    .menu-button, .close-button {
      display: block!important;
    }
  }
</style>

<div class="background"></div>

<div class="menu-button">
  <i class="fas fa-list"></i>
</div>
    <aside>
            <div id="sidebar">  

               <div class="block">
                <p class="centered"><img src="<%= current_user.avatar.url(:thumb) %>" alt=""></p>
                <h5 class="centered"><%=current_user.nome%></h5>
                  <div class="close-button">
                    <input type="radio" name="item" id="close-item" checked hidden />
                    <label for="close-item" style="font-size: 14px!important;"><i class="far fa-times-circle"></i>
                      Fechar Menu
                    </label>
                  </div>

                  <div>
                    <input type="radio" name="item" id="item-one" checked hidden />
                    <label for="item-one"><i class="fa fa-home"></i>
                      <%= link_to 'Home', admin_index_path %>
                    </label>
                  </div>
                    
                  <div>
                    <input type="radio" name="item" id="item-zero" hidden />
                    <label for="item-zero"><i class="fas fa-cog"></i>
                      Mudar tipo de User
                    </label>
                    <div>
                      <%= link_to "Alunos",student_area_index_path %>
                      <%= link_to "Professor",teachers_area_index_path%>
                      <%= link_to "Coordinador",coordinators_area_index_path%>
                      <%= link_to "Voltar para Admin",admin_index_path%>
                      <%= link_to "Sair", destroy_user_session_path, :method => 'delete', class: "logout" %>
                    </div>
                  </div>

                  <div>
                    <input type="radio" name="item" id="item-two" hidden />
                    <label for="item-two"><i class="fa fa-group"></i>
                      Gerenciar Usuários
                    </label>
                    <div>
                      <%= link_to 'Administradores', administrators_path %>
                      <%= link_to 'Diretores', principals_path %>
                      <%= link_to 'Coordenadores', coordinators_path %>
                      <%= link_to 'Professores', teachers_path %>
                      <%= link_to 'Estudantes', students_path %>
                    </div>
                  </div>

                  <div>
                    <input type="radio" name="item" id="item-three" hidden />
                    <label for="item-three">
                    <i class="fa fa-university"></i>
                      Gerenciar Instituições
                    </label>
                    <div>
                      <%= link_to 'Instituições', institutions_path %>
                      <%= link_to 'Campus', campus_path %>
                      <%= link_to 'Centros', centers_path %>
                    </div>
                  </div>

                  <div>
                    <input type="radio" name="item" id="item-four" hidden />
                    <label for="item-four">
                    <i class="fa fa-mortar-board"></i>
                      Gerenciar Cursos
                    </label>
                    <div>
                      <%= link_to 'Cursos', courses_path %>
                      <%= link_to 'Disciplinas', subjects_path %>
                      <%= link_to 'Turmas', classrooms_path %>
                    </div>
                  </div>

                  <div>
                    <input type="radio" name="item" id="item-five" hidden />
                    <label for="item-five">
                    <i class=" fa fa-user"></i>
                    Perfil
                    </label>
                    <div>
                      <%= link_to "Editar", edit_user_registration_path %>
                    </div>
                  </div> 

                  <div>
                    <input type="radio" name="item" id="item-six" hidden />
                    <label for="item-six">
                    <i class="fas fa-sign-out-alt"></i>
                    <a href="<%= destroy_user_session_path %>" data-method="delete" style="color: #aeb2b7;">
                    Sair</a>
                    </label>
                  </div>   
                  <div>
                  </div>               

                </div> 
              <!-- sidebar menu end-->
          </div>
      </aside>
      <!--sidebar end-->

<script>
  $(".menu-button").click(function() {
    $(".menu-button").fadeOut(500);
    $("aside").animate({
      marginLeft: "0px"
    })
  });

  $(".close-button").click(function() {
    $(".menu-button").fadeIn(100);
    $("aside").animate({
      marginLeft: "-600px"
    })
  });  
</script>
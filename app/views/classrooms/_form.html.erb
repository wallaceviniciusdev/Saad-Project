<link rel="stylesheet" href=https://daneden.github.io/animate.css/animate.min.css">

<style>
  .form-control {
      background: white!important;
      width: 100%;
      border: 2px solid #AAA;
      border-radius: 40px;
      padding: 10px 20px!important;
      height: 40px!important;
      margin-bottom: 15px;
      font-size: 12px;
      outline: none;
      transition: all 0.2s;
  }
  .form-control:focus {
      border-color: #294fa5!important;
      color: #294fa5!important;
      box-shadow: none!important;
  }
</style>

<div class="background"></div>
<div class="navegacao">
  <div class="container">
    <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">In√≠cio</a></li>
    <li class="breadcrumb-item">Turmas</li>
    <li class="breadcrumb-item"><a href="javascript:;"><b>Adicionar Turma</b></a></li>
  </ol>
</nav>
  </div>
</div>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
        <h4><%= action %>
          <div>
            <a href="javascript:history.back()"><span class="badge badge-warning"><i class="fas fa-arrow-left"></i> Voltar</span></a>
          </div>
        </h4>
    </div>
  <div class="panel-body">
    <div class="col-lg-12">
            <div class="panel-body">
                        <% if @classroom.errors.any? %>
             <div class="alert alert-danger alert-dismissable">
                <ul>
                <% @classroom.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
          <%= form_for(@classroom) do |f| %>
            <div class="row">
              <div class="col-lg-3">
                <%if current_user.type == 'Administrator'%>
              <div class="field">
                <%= f.label :Disciplina %><br>
                 <%= autocomplete_field_tag :subject, params[:subject], autocomplete_subject_nome_subjects_path, :id_element => '#classroom_subject_id', class: "form-control" %>
              </div>
              <div class="field">
                <%= f.hidden_field :subject_id %>
              </div>
              <% elsif current_user.type != 'Administrator' %>
                  <%= f.label :Disciplina%>
                  <%= f.collection_select(:subject_id, @subjects, :id, :nome,{}, {class: "form-control"})%>
              <% end %>
              </div>
              <div class="col-lg-2">
                <div class="field">
                  <%= f.label :ano %><br>
                  <%= f.text_field :ano,class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-2">
                <div class="field">
                  <%= f.label :semestre %><br>
                  <%= f.text_field :semestre,class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-2">
                <div class="field">
                  <%= f.label :turno %><br>
                  <%= f.text_field :turno,class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-2">
                <div class="field">
                  <%= f.label :codigo %><br>
                  <%= f.text_field :codigo,class: "form-control" %>
                </div>
              </div>
            </div>

    <div class="actions">
      <center><br><%= f.submit funcao   %></center>
    </div>


  <% end %>
      </div>
      </div>
      </div>
    </div>
    </div>
  </div>
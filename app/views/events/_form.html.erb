                        <%= f.label :local %><br>
                        <%= f.text_field :local, class: "form-control" %>
                  </div>
                  <div class="col-lg-6">

                      <div class="campo_compare">
                        <%= f.label :inicio %><br>
                        <%= f.datetime_select :inicio %>

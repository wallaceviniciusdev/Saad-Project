                        <%= f.label :objetivos %><br> 
                        <%= f.text_area :objetivos, class: "form-control" %>
                    </div>
                <div class="col-lg-6">
                        <%= f.label :informações %><br>
                        <%= f.text_area :informacoes, class: "form-control" %>
                  </div>
                  <div class="col-lg-6">
                      <div class="campo_compare">
                        <%= f.label :foto %>
                        <%= f.file_field :image, :class => "form-control" %>
                      </div>
                  </div>
            </div>
                  <div class="col-lg-2">
                        <%= f.label :carga_horária %><br>
                        <%= f.number_field :ch , class: "form-control"%>
                  </div>

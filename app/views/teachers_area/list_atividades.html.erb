<link href="http://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href=https://daneden.github.io/animate.css/animate.min.css">

<div class="background"></div>

<style>
  input {
    width: 100%;
  }

</style>

<div class="navegacao">
  <div class="container">
    <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">In√≠cio</a></li>
    <li class="breadcrumb-item">Atividades</li>
    <li class="breadcrumb-item"><a href="javascript:;"><b>Criar Nova Atividade</b></a></li>
  </ol>
</nav>
  </div>
</div>

<div class="container">

 <div class="panel panel-default">
  <div class="panel-heading">
    <h4>Atividades
        <a href="javascript:history.back()"><h4><span class="badge badge-warning"><i class="fas fa-arrow-left"></i> Voltar</span></h4></a>
    </h4>
  </div>

    <div class="row">
      <div class="col-lg-12">
            <div class="panel-body">

          <h4><i class="fa fa-file-o" style="color:#11B70B;"></i> Atividades Em Aberto</h4>
          <section id="unseen">
            <table class="table table-bordered table-striped table-condensed">
      <thead>
        <tr>
          <th>Titulo</th>
          <th>Status</th>
          <th> Arquivo</th>
          <th>Respostas</th>
          <th>Editar</th>
          <th>Deletar</th>
        </tr>
      </thead>

      <tbody>
        <% @atividades.each do |atividade_extra| %>
        <%if atividade_extra.status != 'finalizado' %>
          <tr>
            <td><%= atividade_extra.titulo %></td>
            <td><%= atividade_extra.status %></td>
            <td><%= link_to atividade_extra.arquivo.url(:original, false),class:"btn btn-default btn-sm" do %>
                  <% if atividade_extra.arquivo_content_type == "application/pdf" %>
                    <i class="fa fa-file-pdf-o" style="color:#ffffff!important;"></i>
                  <% else %>
                    <i class="fa fa-file-word-o" style="color:#ffffff!important;"></i>

                  <% end %>
              <% end %>
            </td>
            <td><%= link_to 'Ver Respostas', atividade_extra ,class:"btn btn-default btn-sm"%></td>
                       <td><%= link_to 'Editar', edit_atividade_extra_path(atividade_extra),class:"btn btn-default btn-sm"%></td>

        <td><%= link_to 'Excluir', atividade_extra_path(atividade_extra),method: :delete,class:"btn btn-default btn-sm",data: { confirm: 'Deseja realmente excluir esta atividade?' }%></td>

          </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>

    <br>

    </section>


          <h4><i class="fa fa-file-o" style="color:#BD1E0F;"></i> Atividades Fechadas</h4>
          <section id="unseen">
            <table class="table table-bordered table-striped table-condensed">
      <thead>
        <tr>
          <th>Titulo</th>
          <th>Status</th>
          <th >Arquivo</th>
          <th>Respostas</th>
          <th> Editar</th>
          <th>Deletar</th>
        </tr>
      </thead>

      <tbody>
        <% @atividades.each do |atividade_extra| %>
          <%if atividade_extra.status == 'finalizado'%>
          <tr>
            <td><%= atividade_extra.titulo %></td>
            <td><%= atividade_extra.status %></td>
            <td><%= link_to atividade_extra.arquivo.url(:original, false),class:"btn btn-default btn-sm" do %>
                  <% if atividade_extra.arquivo_content_type == "application/pdf" %>
                    <i class="fa fa-file-pdf-o" style="color:#ffffff;"></i>
                  <% else %>
                    <i class="fa fa-file-word-o" style="color:#ffffff;"></i>

                  <% end %>
              <% end %>
            </td>
            <td><%= link_to 'Ver Respostas', atividade_extra ,class:"btn btn-default btn-sm"%></td>
           <td><%= link_to 'Editar', edit_atividade_extra_path(atividade_extra),class:"btn btn-default btn-sm"%></td>

        <td><%= link_to 'Excluir', atividade_extra_path(atividade_extra),method: :delete,class:"btn btn-default btn-sm",data: { confirm: 'Deseja realmente excluir esta atividade?' }%></td>

          </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>

    <br>

    </section>
